{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@store/*": ["./src/store/*"],
      "@actions/*": ["./src/store/actions/*"],
      "@services/*": ["src/services/*"],
      "@components/*": ["./src/components/*"],
      "@css/*": ["./src/assets/css/*"],
      "@js/*": ["./src/assets/js/*"],
      "@img/*": ["./src/assets/img/*"],
      "@config/*": ["./src/config/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
